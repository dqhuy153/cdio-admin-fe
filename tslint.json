{
  "extends": [
    "tslint:recommended",
    "tslint-config-airbnb",
    "tslint-react-hooks",
    "tslint:latest",
    "tslint-react"
  ],
  "jsRules": {
    "no-unused-expression": true
  },
  "rules": {
    "import-name": false,
    "align": false,
    "function-name": [
      true,
      {
        "function-regex": "^[a-z$][\\w\\d]+$",
        "method-regex": "^[a-z$][\\w\\d]+$",
        "private-method-regex": "^[a-z$][\\w\\d]+$",
        "protected-method-regex": "^[a-z$][\\w\\d]+$",
        "static-method-regex": "^[a-z$][\\w\\d]+$"
      }
    ],
    "indent": [true, "spaces", 2],
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-pascal-case",
        "require-const-for-all-caps"
      ]
    },
    "max-line-length": [true, 130],
    "react-hooks-nesting": {
      "severity": "error",
      "options": {
        "detect-hooks-from-non-react-namespace": true
      }
    },
    "semicolon": [false, "never"],
    "await-promise": true,
    "no-async-without-await": true,
    "no-floating-promises": [true, { "ignoreVoid": true }],
    "prefer-conditional-expression": [true, "check-else-if"],
    "no-implicit-dependencies": false,
    "jsx-no-multiline-js": false,
    "jsx-boolean-value": false,
    "no-submodule-imports": false,
    "jsx-wrap-multiline": false,
    "unnecessary-else": [true, { "allow-else-if": false }],
    "early-exit": [true, { "max-length": 0, "ignore-constructor": true }],
    "cyclomatic-complexity": [true, 10],
    "newline-before-return": true,
    "no-default-export": false,
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "no-console": [true, "log", "error"],
    "jsx-no-lambda": false,
    "trailing-comma": false,
    "object-literal-key-quotes": [false, "as-needed"],
    "comment-format": [false],
    "no-string-literal": false
  }
}
